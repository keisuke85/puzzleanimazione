<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gridview_item_background"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_icon_imgview"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_name_txtview"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_below="@+id/item_icon_imgview"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_name_description"
        android:layout_below="@+id/item_name_txtview"
        android:paddingTop="2dp"/>

</RelativeLayout>